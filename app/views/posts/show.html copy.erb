<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-8">
      <div class="post-details">
        <h2 class="mb-0"><%= @post.title %></h2>
        <p class="text-muted mb-2">Posted by <strong><%= @post.author.name %></strong></p>
        <p class="text-muted">
          <div class="post-content mt-4">
            <%= @post.text %>
          </div>
          <span class="me-3">comments: <strong><%= @post.comments_counter %></strong></span>
          Likes: <strong><%= @post.likes_counter %></strong>
        </p>

        <!-- Display previous comments -->
        <div class="comments mt-4">
          <h6>Comments</h6>
          <ul class="list-unstyled">
            <!-- Loop through comments and display them -->
            <% @post.comments.each do |comment| %>
              <li class="mt-3">
                <strong><%= comment.user.name %>:</strong>
                <%= comment.text %>
              </li>
            <% end %>
          </ul>
        </div>
        <%= form_with model: [@user, @post, @comment], url: user_post_comments_path(@user, @post) do |form| %>
  <%= form.label :text, 'Add a Comment' %>
  <%= form.text_field :text, class: 'form-control' %>
  <%= form.submit 'Submit Comment', class: 'btn btn-primary' %>
<% end %>


        

        <!-- Like Button -->
        <form method="post" action="<%= like_user_post_path(user_id: @post.author.id, post_id: @post.id) %>" style="display: inline;">

          <input type="submit" value="Like" class="btn btn-primary mt-4">
        </form>
      </div>
    </div>
  </div>
</div>
