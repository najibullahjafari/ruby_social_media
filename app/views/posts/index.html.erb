<h1>List of Postss</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, user_post_path(@user, post) %>
      <ul>
        <% post.recent_comments.each do |comment| %>
          <li><%= comment.text %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
